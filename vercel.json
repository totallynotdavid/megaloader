{
  "version": 2,
  "builds": [
    {
      "src": "packages/api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "packages/api/index.py"
    }
  ],
  "buildCommand": "pip install ./packages/core && pip install -r requirements.txt",
  "installCommand": "pip install --upgrade pip"
}
